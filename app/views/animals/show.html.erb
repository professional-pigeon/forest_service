<h1><%= @animal.name %></h1>

<% if @animal.sightings.any? %>
  <h4>Here are the sightings for this animal:</h4>

  <% @animal.sightings.each do |sighting| %>
    <ul>
      <li>
        <%= link_to sighting.date_of_sighting, animal_sighting_path(@animal, sighting) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No sightings are listed for this animal.</p>
<% end %>

<p><%= link_to "Add a sighting", new_animal_sighting_path(@animal) %></p>


<p><%= link_to "Edit", edit_animal_path(@animal) %></p>
<p><%= link_to "Delete", animal_path(@animal), :data => {:confirm => "Are you out of your damn mind?", :method => "delete"} %></p>

<p><%= link_to "Return to Animals", animals_path %></p>

<form action="/animals/<%= @animal.id %>" method="get">
  <div class="form-control">
    <label id="date1">First date</label>
    <input type="date" name ="date1" id="date1">
    <label id="date2">First date</label>
    <input type="date" name ="date2" id="date2">
    <button type="submit" class="btn btn-primary">submit dates</button>
  </div>
</form>
