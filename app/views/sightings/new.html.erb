<h1>Add a new sighting:</h1>

<%= form_for [@animal, @sighting] do |f| %>
  <%= f.label :date_of_sighting %>
  <%= f.date_field :date_of_sighting %>
  <%= f.label :latitude %>
  <%= f.number_field :latitude, step: :any %>
  <%= f.label :longitude %>
  <%= f.number_field :longitude, step: :any %>
  <p><%= f.submit %></p>
<% end %>